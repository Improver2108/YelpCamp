<% include ../partials/header %> 

<div class="container">
    <div class="row">
       <div class="col-md-12">
            <h1 class="text-center mt-5">Edit <%= campground.name %> </h1>
            <div style="width:30%;margin:25px auto;"> 
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" placeholder="name" value="<%= campground.name %>" name="campground[name]" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="number" placeholder="price" value="<%= campground.price %>" name="campground[price]" class="form-control" min="1" step="1" required>
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="image url" value="<%= campground.image %>" name="campground[image]" class="form-control" required>                        
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="description" value="<%= campground.description %>" name="campground[description]" class="form-control">                        
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Submit</button>                        
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %> ">Go Back!!</a>     
            </div>            
        </div>        
    </div>    
</div>


<% include ../partials/footer %> 