<% include ../partials/header %> 

<div class="container">
    <div class="row">
       <div class="col-md-12">
            <h1 class="text-center mt-5">Create new Campgrounds here</h1>
            <div style="width:30%;margin:25px auto;">

                
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input type="text" placeholder="name" name="name" class="form-control" required>                    
                    </div>
                    <div class="form-group">
                        <input type="number" placeholder="price" name="price" class="form-control" min="1" step="1" required>                    
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="image url" name="image" class="form-control" required>                    
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="description" name="description" class="form-control">                    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Submit</button>                    
                    </div>
                </form>
                <a href="/campgrounds">Go Back!!</a>     
            </div>
            
        </div>
        
    </div>
    
</div>


<% include ../partials/footer %> 