<% include ../partials/header %> 

<div class="container">
    <div class="row">
       <div class="col-md-12">
            <h1 class="text-center mt-5">Edit your Comment</h1>
            <div style="width:30%;margin:25px auto;">                  
                
                <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" placeholder="add a comment" name="comment[title]" value="<%=comment.title %>" class="form-control" required>
                    </div>                               
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Submit</button>                    
                    </div>
                </form>
                <a href="/campgrounds">Go Back!!</a>     
            </div>            
        </div>        
    </div>    
</div>


<% include ../partials/footer %> 